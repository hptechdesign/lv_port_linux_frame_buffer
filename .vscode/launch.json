    "version": "0.2.0",
	"configurations": [

		{
		  "name": "GDB debug SDL_ECU_Display",
		  "type": "cppdbg",
		  "request": "launch",
		  "program": "${workspaceFolder}/build/src/sdl_ecu_display.exe",
		  "args": [],
		  "stopAtEntry": false,
		  "cwd": "${fileDirname}",
		  "environment": [],
		  "externalConsole": true,
		  "MIMode": "gdb",
		"miDebuggerPath": "C:\\msys64\\mingw64\\bin\\gdb.exe",
		"setupCommands": [
		{
		  "description": "Enable pretty-printing for gdb",
		  "text": "-enable-pretty-printing",
		  "ignoreFailures": true
		},
	   ]
	  },
	  {
		"type": "gdb",
		"request": "attach",
		"name": "Attach to gdbserver",
		"executable": "./build/src/rpi_ecu_display",
		"target": "192.168.0.115:9999",
		"remote": true,
		"cwd": "${workspaceRoot}", 
		"gdbpath": "arm-linux-gnueabihf-gdb.exe",
		//"preLaunchTask": "Transfer to RPI and Start GDB server",
		//"postDebugTask": "Kill GDB server"
	}
	  ],
}